.mediaPicture
    background-size contain
    position fixed
    top 0
    bottom 0
    left 0
    right 0
    z-index 99999
    background-color black
    color white
    background-repeat no-repeat
    background-position center, center

    &.display-actions
        .mediaHeader
            top 0
        .mediaFooter
            bottom 0

    .mediaHeader
        transition-duration: 0.3s;
        position fixed
        top -56px
        left 0
        right 0

        .btn-floating
            background-color transparent
            box-shadow inherit

    .mediaFooter
        transition-duration: 0.3s;
        position fixed
        bottom -56px
        left 0
        right 0

        .btn-flat
            color white
            height 100%

    .mediaContainer
        height 100%

        iframe
            border none
            width 100%
            height 100%



    nav
        background-color rgba(0, 0, 0, 0.25)
