ul.collection.with-header
    li.collection-item
        div
            = deviceName
            .secondary-content
                i.material-icons stay_current_portrait
    li.collection-item
        div v
            = appVersion
            .secondary-content
                i.material-icons info
    if device.platform === 'Android'
        li.collection-header
            h5= t('synchronisation title')
        li.collection-item
            p
                input#contactSyncCheck(type="checkbox", checked=syncContacts, disabled= !firstSync)
                label(for='contactSyncCheck')= t('contacts sync label')
            p
                input#calendarSyncCheck(type="checkbox", checked=syncCalendars, disabled= !firstSync)
                label(for='calendarSyncCheck')= t('calendars sync label')
            p
                input#cozyNotificationsCheck(type="checkbox", checked=cozyNotifications)
                label(for='cozyNotificationsCheck')= t('cozy notifications sync label')

    li.collection-header
        h5= t('backup title')
        li.collection-item
            p
                input#imageSyncCheck(type="checkbox", checked=syncImages)
                label(for='imageSyncCheck')= t('images sync label')
            p
                input#wifiSyncCheck(type="checkbox", checked=syncOnWifi)
                label(for='wifiSyncCheck')= t('wifi sync label')


    li.collection-header
        h5= t('reset title')

    li.collection-item
        p= t('synchro warning')
        p.center
            button#synchrobtn.waves-effect.waves-light.btn.bg-cozy-color
                i.material-icons.left cloud_download
                = t('retry synchro')


    li.collection-header
        h5= t('support')

    li.collection-item
        p= t('send log info')
        p.center
            button#sendlogbtn.waves-effect.waves-light.btn.bg-cozy-color
                i.material-icons.left send
                = t('config_log_send')
        p.center
            button#sharelogbtn.waves-effect.waves-light.btn.bg-cozy-color
                i.material-icons.left share
                = t('config_log_share')
